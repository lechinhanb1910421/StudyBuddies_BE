<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <!-- <File name="LogFileAppender" fileName="${sys:logFileName:-default}" append="false">
            <PatternLayout>
                <Pattern>%d [%t] %p - %m%n</Pattern>
            </PatternLayout>
        </File> -->
        <RollingFile name="RollingFile" fileName="${env:JBOSS_HOME}/standalone/log/application.log"
            filePattern="${env:JBOSS_HOME}/standalone/log/${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <SizeBasedTriggeringPolicy size="1 KB" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.everett.apis.PostAPI" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="com.everett.apis.UserAPI" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="com.everett.apis.CommentAPI" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="com.everett.services.PostService" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
            <AppenderRef ref="RollingFile" />
        </Logger>

        <Root level="debug">
            <AppenderRef ref="ConsoleAppender" />
            <!-- <AppenderRef ref="FileAppender"/> -->
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>
</Configuration>
